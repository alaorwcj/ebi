# Copie este arquivo para .env e ajuste se necessário:
# cp .env.example .env

# Chave secreta da aplicação (altere em produção)
APP_SECRET_KEY=change_me

# Banco de dados
# Com Docker: use DB_HOST=db (padrão do compose)
# Sem Docker: use DB_HOST=localhost
DB_HOST=localhost
DB_PORT=5432
DB_NAME=ebi_vila_paula
DB_USER=ebi_user
DB_PASS=ebi_pass

# URL da API para o frontend (Vite)
VITE_API_URL=http://localhost:8000/api/v1

# Permite criar o primeiro usuário coordenadora via /auth/bootstrap quando o banco está vazio
ALLOW_BOOTSTRAP=true

# WhatsApp (Meta Cloud API)
# Ative somente quando tiver:
# - Numero WhatsApp Business verificado
# - Template aprovado na Meta
# - Token de acesso valido
WHATSAPP_ENABLED=false
WHATSAPP_API_VERSION=v19.0
# ID do numero do WhatsApp Business (Phone Number ID)
WHATSAPP_PHONE_NUMBER_ID=
# Token de acesso da Meta Cloud API
WHATSAPP_ACCESS_TOKEN=
# Nome do template aprovado (ex: ebi_pin_entrada)
WHATSAPP_TEMPLATE_NAME=
# Idioma do template aprovado (ex: pt_BR)
WHATSAPP_TEMPLATE_LANGUAGE=pt_BR
# Codigo do pais usado quando o telefone nao estiver em E.164
WHATSAPP_DEFAULT_COUNTRY_CODE=55
