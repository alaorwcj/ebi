# Copie este arquivo para .env e ajuste se necessário:
# cp .env.example .env

# Chave secreta da aplicação (altere em produção)
APP_SECRET_KEY=change_me

# Banco de dados
# Com Docker: use DB_HOST=db (padrão do compose)
# Sem Docker: use DB_HOST=localhost
DB_HOST=localhost
DB_PORT=5432
DB_NAME=ebi_vila_paula
DB_USER=ebi_user
DB_PASS=ebi_pass

# URL da API para o frontend (Vite)
VITE_API_URL=http://localhost:8000/api/v1

# Permite criar o primeiro usuário coordenadora via /auth/bootstrap quando o banco está vazio
ALLOW_BOOTSTRAP=true
